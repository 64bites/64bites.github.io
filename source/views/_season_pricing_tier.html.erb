<div class="tier <%= tier_class %>">
  <div class="title">
    <h3>with Season <%= season.number %></h3>
  </div>
  <div class="price">
    <% if current_promotion.enabled? %>  
      <span class="value"><s style="color: #9e8318"><%= season.price.formatted %></s> <%= current_promotion.season_price.formatted %></span>
    <% else %>
      <span class="value"><%= season.price.formatted %></span>
    <% end %>
  </div>
  <div class="features">
    <ul class="fa-ul">
      <li><i class="fa-li fa fa-check"></i>Immediate access to the episode</li>
      <li><i class="fa-li fa fa-check"></i>Online streaming</li>
      <li><i class="fa-li fa fa-check"></i>DRM-free download</li>
      <li><i class="fa-li fa fa-check"></i><strong>8 Other Videos!</strong></li>
      <li><i class="fa-li fa fa-check"></i>Full Transcripts</li>
      <li><i class="fa-li fa fa-check"></i>Source Codes</li>
      <li><i class="fa-li fa fa-check"></i>Exercises</li>
      <li><i class="fa-li fa fa-check"></i><strong>More cost-efficient</strong></li>
      <li><i class="fa-li fa fa-check"></i>One-time payment</li>
    </ul>
  </div>
  <div class="price-per-episode">
    <% if current_promotion.enabled? %>  
      Price per episode: <s style="color: #908e8a"><abbr title="estimated">$2.22</abbr></s> <abbr title="estimated"><%= current_promotion.price_per_episode_in_season.formatted %></abbr>
    <% else %>
      Price per episode: <abbr title="estimated">$2.22</abbr>
    <% end %>
  </div>
  <div class="call-to-action">
    <% if current_promotion.enabled? %>  
    <a class="button" data-gumroad-single-product="true" href="https://gumroad.com/l/<%= season.gumroad_product_id %>/<%= current_promotion.coupon_code %>">Get Episode + Season</a>
    <% else %>
      <a class="button" data-gumroad-single-product="true" href="https://gumroad.com/l/<%= season.gumroad_product_id %>/">Get Episode + Season</a>
    <% end %>
  </div>
  <% if show_alternative_cta %>
  <div class="more">
    or <a href="/seasons/all">browse all seasons</a>
  </div>
  <% end %>
</div>

!!!
%html
  %head
    %meta{charset: "utf-8"}
    %meta{content: "IE=edge,chrome=1", http: {equiv: "X-UA-Compatible"}}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1"}
    %title= current_page.data.title || "64 Bites"
    = stylesheet_link_tag "application"
    = favicon_tag 'favicon.ico'
    %link{rel:"apple-touch-icon", href:"favicon-76.png"}
    %link{rel:"apple-touch-icon", sizes:"120x120", href:"favicon-120.png"}
    %link{rel:"apple-touch-icon", sizes:"152x152", href:"favicon-152.png"}
    %link{rel:"apple-touch-icon", sizes:"180x180", href:"favicon-180.png"}
    %meta{:property => "og:image", :content => image_url(current_page.data.thumbnail || "logo-square.png")}
    %meta{:property => "og:url", :content => page_url(current_page.url)}
    %meta{:property => "og:title", :content => current_page.data.title || "64 Bites"}
    %meta{:property => "og:type", :content => "website"}
    %meta{:property => "og:description", :content => current_page.data.summary || ""}
    %meta{name:"google-site-verification", content:"Yaz0CxBUbKaWP3BWbjlc_JEq0LhifBVnTBzYuXtYQBE"}
    = partial "layouts/facebook_pixel", locals: {event: current_page.data.facebook_pixel_event || "PageView" }
    = partial "layouts/sumo_me"
  %body{class: page_classes}
    .container
      - if(!current_page.data.hide_menu)
        = partial "layouts/header"
      %main
        = yield
      = partial "layouts/footer"
    = javascript_include_tag "https://code.jquery.com/jquery-2.1.1.min.js", "application"
    :javascript

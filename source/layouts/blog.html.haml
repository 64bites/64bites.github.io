!!!
%html
  %head
    %meta{charset: "utf-8"}
    %meta{content: "IE=edge,chrome=1", http: {equiv: "X-UA-Compatible"}}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1"}
    %title= "64 Bites - Episode #{current_article.title}"
    = stylesheet_link_tag "application"
    = favicon_tag 'favicon.ico'
    %link{rel:"apple-touch-icon", href:"favicon-76.png"}
    %link{rel:"apple-touch-icon", sizes:"120x120", href:"favicon-120.png"}
    %link{rel:"apple-touch-icon", sizes:"152x152", href:"favicon-152.png"}
    %link{rel:"apple-touch-icon", sizes:"180x180", href:"favicon-180.png"}
    %meta{:property => "og:image", :content => article_thumbnail_url(current_article)}
    %meta{:property => "og:url", :content => page_url(current_article.url)}
    %meta{:property => "og:title", :content => "64 Bites Blog - #{current_article.title}"}
    %meta{:property => "og:type", :content => "video.episode"}
    %meta{:property => "og:description", :content => current_article.summary(250)}
    %meta{name:"google-site-verification", content:"Yaz0CxBUbKaWP3BWbjlc_JEq0LhifBVnTBzYuXtYQBE"}
    = feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed"
    = partial "layouts/gtm_head"

  %body{class: page_classes}
    = partial "layouts/gtm_body"
    .container
      = partial "layouts/header"
      %main
        %h1= current_article.title
        = yield
        %hr
      = partial "layouts/footer"
    = javascript_include_tag "https://code.jquery.com/jquery-2.1.1.min.js", "application", "highlight", "syntax-highlighting"
    = partial "layouts/gumroad_script"
    = yield_content(:javascript)
    
